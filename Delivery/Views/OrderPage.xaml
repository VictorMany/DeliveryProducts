<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converter="clr-namespace:Delivery.Converters"
             mc:Ignorable="d"
             x:Class="Delivery.Views.OrderPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:ImageConverter x:Key="ImageConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid>
            <FlexLayout 
            x:Name="ItemsCollectionView"
            BindableLayout.ItemsSource="{Binding ListProductsOnCart}"
            Direction="Row"
            AlignContent="Start"
            JustifyContent="SpaceAround"
            Wrap="Wrap"
            Margin="5,5"
           >
                <BindableLayout.ItemTemplate>
                    <DataTemplate>


                        <StackLayout   
                        Padding="2 , 10, 2, 10"
                        WidthRequest="500"
                        HeightRequest="140"
                        VerticalOptions="CenterAndExpand"
                       >
                            <Grid BackgroundColor="#58CDFC"
                               Padding="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="60"></RowDefinition>
                                    <RowDefinition Height="30"></RowDefinition>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Label 
                            Text="{Binding Name}"   
                            LineBreakMode="NoWrap" 
                            Style="{DynamicResource ListItemTextStyle}" 
                          
                            TextColor="White"
                            Grid.Column="0"
                            Grid.Row="0"
                            FontSize="Large"
                            FontAttributes="Bold"
                            />

                                <Label  
                            Text="{Binding Price}" 
                            LineBreakMode="NoWrap"
                            Style="{DynamicResource ListItemDetailTextStyle}"
                         
                            TextColor="White"
                            Grid.Column="0"
                            Grid.Row="1"
                            FontSize="Large"
                            FontAttributes="Bold"/>
                                <Image
                            Source="{Binding PictureBase64, Converter={StaticResource ImageConverter}}"
                            Grid.Column="1"
                            Grid.RowSpan="2"
                           
                            HorizontalOptions="Center"
                            />

                            </Grid>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer 
                                Command="{Binding parent.SelectCommand}"
                                CommandParameter="{Binding ID}">
                                </TapGestureRecognizer>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>

                    </DataTemplate>

                </BindableLayout.ItemTemplate>

            </FlexLayout>
            <Frame 
                HeightRequest="47" 
                BorderColor="Blue" 
                VerticalOptions="End"  
                Margin="7, 0, 270, 140" 
                CornerRadius="5" 
                Padding="1">
                <Label 
                  Text="Precio Total" 
                  FontSize="Large" 
                  BackgroundColor="Blue" 
                  TextColor="White" 
                  VerticalTextAlignment="Center" 
                  HorizontalTextAlignment="Center"/>
            </Frame>
            <Frame 
                BorderColor="Blue" 
                VerticalOptions="End" 
                Margin="160, 0, 10, 141" 
                CornerRadius="5" 
                Padding="8" 
                HeightRequest="32">
                <Label 
                   Text="Hola" 
                   FontSize="Large"/>
            </Frame>
            <Button 
                Text="SIGUIENTE" 
                TextColor="White" 
                BackgroundColor="DarkBlue" 
                Margin="200, 0, 40, 50" 
                VerticalOptions="EndAndExpand"  
                Command="{Binding NextCommand}"></Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>